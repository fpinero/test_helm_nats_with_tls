{
  "_comment_Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o}|{UppercaseLogLevel}|{ThreadId}|{CorrelationId}|{MachineName}|{Message:lj}|{FullName}|{MemberName}|{LineNumber}|{Exception}|{Properties:j}{NewLine}"
        }
      }
    ]
  },

  "AzureAd": {
    "Instance": "{{master-tenant-management-azuread-instance}}",
    "MSGraphApiEndPoint": "{{master-tenant-management-azuread-msgraph-api-endpoint}}",
    "MSGraphApiVersion": "{{master-tenant-management-azuread-msgraph-api-version}}",
    "CustomerNumberAzUserExtension": "{{master-tenant-management-azuread-customer-number-azuser-extension}}",
    "AdminGroupId": "{{master-tenant-management-azuread-admin-group-id}}",
    "Tenant": "{{master-tenant-management-azuread-tenant}}",
    "ClientId": "{{master-tenant-management-azuread-client-id}}",
    "ClientSecret": "{{master-tenant-management-azuread-client-secret}}"
  },

  "NotificationSender": {
    "ConnectionString": "{{master-tenant-management-notification-connection-string}}"
  },

  "ConnectionStrings": {
    "DBConnection": "{{master-tenant-management-connection-string}}"
  },
  
  "Swagger": {
    "IsEnabled": true
  },
  
  "Secrets": {
    "SecretsToRead": [
      "master-tenant-management-connection-string",
      "master-tenant-management-notification-connection-string",
      "master-tenant-management-azuread-instance",
      "master-tenant-management-azuread-msgraph-api-endpoint",
      "master-tenant-management-azuread-msgraph-api-version",
      "master-tenant-management-azuread-customer-number-azuser-extension",
      "master-tenant-management-azuread-admin-group-id",
      "master-tenant-management-azuread-tenant",
      "master-tenant-management-azuread-client-id",
      "master-tenant-management-azuread-client-secret"
    ],
    "Store": "azurekeyvault"
  }
}
