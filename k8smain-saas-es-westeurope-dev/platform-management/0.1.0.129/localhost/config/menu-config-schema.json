{
    "$schema": "http://json-schema.org/schema",
    "definitions": {
        "menuEntry": {
            "type": "object",
            "description": "Item route and right to access",
            "properties": {
                "route": {
                    "type": "string",
                    "description": "Router of Tenant List page"
                },
                "right": {
                    "type": "string",
                    "description": "Definition of right need to access"
                },
                "label": {
                    "type": "string",
                    "description": "Entry menu label"
                },
                "icon": {
                    "type": "string",
                    "description": "Entry menu icon"
                },
                "entries": {
                    "type": "array",
                    "description": "List of menu entries",
                    "items": { "$ref": "#/definitions/menuEntry" }
                }
            },
            "required": ["label"]
        }
    },
    "$id": "bizerba-menu-config-schema",
    "title": "Bizerba menu configuration settings schema",
    "type": "object",
    "properties": {
        "entries": {
            "type": "array",
            "description": "List of menu entries",
            "items": { "$ref": "#/definitions/menuEntry" }
        }
    },
    "required": [
        "entries"
    ]
}
