{
    "$schema": "http://json-schema.org/schema",
    "$id": "bizerba-config-schema",
    "title": "Bizerba configuration settings schema",
    "type": "object",
    "definitions": {
        "versionInfo": {
            "type": "object",
            "description": "Entity version",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Version name"
                },
                "versionNumber": {
                    "type": "string",
                    "description": "Version number"
                }
            },
            "required": ["name", "versionNumber"]
        }
    },
    "properties": {
        "serverURL": {
            "type": "string",
            "description": "Server URL for REST calls"
        },
        "restApiVersion": {
            "type": "string",
            "description": "Rest API Version used in the application"
        },
        "availableLanguages": {
            "type": "array",
            "default": ["en_US", "en", "de"],
            "description": "List of available languages"
        },
        "defaultLanguage": {
            "type": "string",
            "default": "en-US",
            "description": "Default application's language"
        },
        "wsURL": {
            "type": "string",
            "description": "WS Url for SignalR connection"
        },
        "logOutURL": {
            "type": "string",
            "description": "Url log out"
        },
        "versioning": {
            "type": "array",
            "description": "List of versions",
            "items": {
                "$ref": "#/definitions/versionInfo"
            }
        }
    },
    "required": [
        "serverURL",
        "restApiVersion",
        "availableLanguages",
        "defaultLanguage",
        "wsURL",
        "logOutURL",
        "versioning"
    ]
}
